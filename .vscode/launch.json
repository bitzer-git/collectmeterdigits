    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Labelling only",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${cwd}"
                },                
            "args": ["--labeling=./data/labeled"],
            "justMyCode": true
        },
        {
            "name": "Python: Collect & Label",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {"PYTHONPATH": "${cwd}"
                },                
            "args": ["--collect=192.168.178.51", "--days=1"],
            "justMyCode": true
        }
    ]
}